{
    "name": "vse/smartsubjects",
    "type": "phpbb-extension",
    "description": "When editing the subject of the first post in a topic, all subsequent posts with matching (Re:) subjects will also be updated to the new subject.",
    "homepage": "https://github.com/iMattPro/smartsubjects",
    "version": "2.0.0-dev",
	"keywords": ["phpbb", "extension", "subject", "edit", "smart"],
	"license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Matt Friedman",
			"homepage": "https://imattpro.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4",
		"composer/installers": "~1.0"
    },
    "extra": {
        "display-name": "Smart Subjects",
        "soft-require": {
            "phpbb/phpbb": ">=3.2.0"
        },
        "version-check": {
            "host": "www.phpbb.com",
            "directory": "/customise/db/extension/smart_subjects",
            "filename": "version_check"
        }
    }
}
